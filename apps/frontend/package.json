{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Frontend mobile-first PWA da plataforma Wheel Pro, construída com Next.js para performance otimizada, gamificação e integração com backend.",
  "author": "Wheel Pro Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md,yml,yaml}'",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "check": "npm run lint && npm run type-check && npm run test"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@hookform/resolvers": "^5.1.1",
    "framer-motion": "^12.23.7",
    "graphql": "^16.11.0",
    "i18next": "^25.3.2",
    "next": "^15.4.3",
    "next-pwa": "^5.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.0",
    "react-i18next": "^15.6.1",
    "tailwindcss": "^4.1.11",
    "web-push": "^3.6.7",
    "workbox-window": "^7.3.0",
    "zod": "^4.0.7",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.4.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,yml,yaml}": "prettier --write"
  }
}
